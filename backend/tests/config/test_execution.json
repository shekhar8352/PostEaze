{
  "test_execution": {
    "default_timeout": "15m",
    "parallel_workers": 4,
    "coverage_threshold": 80,
    "retry_attempts": 3,
    "output_formats": ["standard", "json", "junit"],
    "environments": {
      "development": {
        "database": "sqlite",
        "log_level": "debug",
        "jwt_expiration": "1h"
      },
      "ci": {
        "database": "postgres",
        "log_level": "error",
        "jwt_expiration": "15m",
        "strict_coverage": true,
        "race_detection": true
      },
      "local": {
        "database": "sqlite",
        "log_level": "info",
        "jwt_expiration": "24h"
      }
    }
  },
  "test_suites": {
    "unit": {
      "description": "Unit tests for individual components",
      "packages": [
        "./tests/unit/api/...",
        "./tests/unit/business/...",
        "./tests/unit/models/...",
        "./tests/unit/utils/..."
      ],
      "suites": {
        "api": {
          "description": "API handler tests",
          "packages": ["./tests/unit/api/..."],
          "tags": ["api", "handlers", "http"]
        },
        "business": {
          "description": "Business logic tests",
          "packages": ["./tests/unit/business/..."],
          "tags": ["business", "logic", "core"]
        },
        "models": {
          "description": "Model validation tests",
          "packages": ["./tests/unit/models/..."],
          "tags": ["models", "validation", "serialization"]
        },
        "utils": {
          "description": "Utility function tests",
          "packages": ["./tests/unit/utils/..."],
          "tags": ["utils", "helpers", "auth"]
        }
      }
    },
    "integration": {
      "description": "Integration tests for component interactions",
      "packages": ["./tests/integration/..."],
      "setup_required": true,
      "database_required": true,
      "suites": {
        "auth": {
          "description": "Authentication integration tests",
          "test_pattern": "TestAuthIntegrationSuite",
          "tags": ["auth", "jwt", "login", "signup"]
        },
        "log": {
          "description": "Log management integration tests",
          "test_pattern": "TestLogIntegrationSuite",
          "tags": ["logs", "files", "retrieval"]
        },
        "database": {
          "description": "Database integration tests",
          "test_pattern": "TestDatabaseIntegrationSuite",
          "tags": ["database", "sql", "transactions"]
        },
        "e2e": {
          "description": "End-to-end integration tests",
          "test_pattern": "TestEndToEndIntegrationSuite",
          "tags": ["e2e", "workflow", "complete"]
        }
      }
    }
  },
  "coverage": {
    "thresholds": {
      "global": 80,
      "package": 70,
      "function": 60
    },
    "exclude_patterns": [
      "*/vendor/*",
      "*/tests/*",
      "*/mocks/*",
      "*_test.go",
      "main.go"
    ],
    "include_patterns": [
      "*/api/*",
      "*/business/*",
      "*/models/*",
      "*/utils/*"
    ]
  },
  "reporting": {
    "formats": {
      "html": {
        "enabled": true,
        "output_file": "coverage.html"
      },
      "xml": {
        "enabled": true,
        "output_file": "coverage.xml"
      },
      "json": {
        "enabled": true,
        "output_file": "test_results.json"
      },
      "junit": {
        "enabled": true,
        "output_file": "junit_results.xml"
      }
    },
    "artifacts": {
      "coverage_reports": true,
      "test_logs": true,
      "benchmark_results": true,
      "performance_profiles": false
    }
  },
  "ci_cd": {
    "github_actions": {
      "enabled": true,
      "parallel_jobs": true,
      "matrix_testing": true,
      "coverage_upload": true
    },
    "hooks": {
      "pre_test": [],
      "post_test": ["coverage_check", "artifact_upload"],
      "on_failure": ["log_collection", "debug_info"]
    }
  },
  "performance": {
    "benchmarks": {
      "enabled": true,
      "memory_profiling": true,
      "cpu_profiling": false,
      "comparison_baseline": "main"
    },
    "load_testing": {
      "enabled": false,
      "concurrent_users": 100,
      "duration": "5m"
    }
  },
  "debugging": {
    "verbose_output": false,
    "race_detection": true,
    "memory_sanitizer": false,
    "debug_symbols": true
  }
}